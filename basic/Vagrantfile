# -*- mode: ruby -*-
# vi: set ft=ruby :

# Vagrantfile API/syntax version. Don't touch unless you know what you're doing!
VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|

config.ssh.forward_agent = true
#config.landrush.enabled = "true"
config.vm.boot_timeout = 90
config.vm.graceful_halt_timeout = 10

config.vm.box = "chef/centos-6.5"
config.vm.provision :shell, path: "libselinux.sh"
config.vm.synced_folder ".", "/vagrant", disabled: true

config.vm.provision "ansible" do |ansible|
  ansible.playbook = "code/tools/pubkeys.yml"
  ansible.extra_vars = { pub_file: '~/.ssh/id_rsa.pub',
                         user: 'vagrant'
                       }
end

# 256MB RAM for all instances
config.vm.provider "virtualbox" do |vb|
  vb.customize ["modifyvm", :id, "--nictype1", "virtio"]
  vb.customize ["modifyvm", :id, "--memory", "256"]
end

  config.vm.define "web" do |web|
    web.vm.hostname = "web"
    web.vm.network "forwarded_port", guest: 80, host: 8080, auto_correct: true
    web.vm.network "forwarded_port", guest: 22, host: 2500, auto_correct: true, id: "ssh"
    web.vm.network "private_network", ip: "172.16.2.200"
  end
  config.vm.define "db" do |db|
    db.vm.hostname = "db"
    db.vm.network "forwarded_port", guest: 3306, host: 3333, auto_correct: true
    db.vm.network "forwarded_port", guest: 22, host: 2501, auto_correct: true, id: "ssh"
    db.vm.network "private_network", ip: "172.16.2.210"
  end
    config.vm.define "proxy" do |proxy|
    proxy.vm.hostname = "proxy"
    proxy.vm.network "forwarded_port", guest: 443, host: 4443, auto_correct: true
    proxy.vm.network "forwarded_port", guest: 22, host: 2502, auto_correct: true, id: "ssh"
    proxy.vm.network "private_network", ip: "172.16.2.220"
  end

  # Copy autogenerated hosts to real enviro path
  config.vm.provision :host_shell do | host_shell |
    host_shell.inline = 'cp .vagrant/provisioners/ansible/inventory/vagrant_ansible_inventory code/enviro/vagrant/hosts'
  end
end
